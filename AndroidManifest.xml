<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.demondevelopers.launcherbadges"
	android:versionCode="1" android:versionName="1.0"
	>
	
	<uses-sdk android:minSdkVersion="12" android:targetSdkVersion="19" />
	
	<application
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@android:style/Theme.Holo"
		>
		
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name"
			android:icon="@drawable/ic_launcher"
			>
			<intent-filter>
				<action   android:name="android.intent.action.MAIN" />
			</intent-filter>
		</activity>
		
		<activity-alias
			android:enabled="true"
			android:name=".MainActivityBadge0"
			android:targetActivity=".MainActivity"
			android:icon="@drawable/ic_launcher"
			>
			<meta-data android:name="com.demondevelopers.launcherbadge" android:value="0" />
			<intent-filter>
				<action   android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
		
		<activity-alias
			android:enabled="false"
			android:name=".MainActivityBadge1"
			android:targetActivity=".MainActivity"
			android:icon="@drawable/ic_launcher_badge_1"
			>
			<meta-data android:name="com.demondevelopers.launcherbadge" android:value="1" />
			<intent-filter>
				<action   android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
		
		<activity-alias
			android:enabled="false"
			android:name=".MainActivityBadge2"
			android:targetActivity=".MainActivity"
			android:icon="@drawable/ic_launcher_badge_2"
			>
			<meta-data android:name="com.demondevelopers.launcherbadge" android:value="2" />
			<intent-filter>
				<action   android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
		
		<activity-alias
			android:enabled="false"
			android:name=".MainActivityBadge3"
			android:targetActivity=".MainActivity"
			android:icon="@drawable/ic_launcher_badge_3"
			>
			<meta-data android:name="com.demondevelopers.launcherbadge" android:value="3" />
			<intent-filter>
				<action   android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity-alias>
		
	</application>
	
</manifest>
